<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="9"
    android:background="@color/lightgray"
    android:layout_height="match_parent">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:background="@drawable/backbg2">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:layout_marginHorizontal="8dp"
                    android:textStyle="bold"
                    android:textColor="@color/lightgray"
                    android:text="Sales Satistics"/>


            </LinearLayout>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp">

            </com.github.mikephil.charting.charts.BarChart>










        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:background="@drawable/backbg2"
        android:layout_margin="5dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text= "Revenue Sources"
            android:textColor="@color/lightgray"
            android:layout_margin="8dp"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <View
            android:id="@+id/divider14"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/offwhite"
            android:layout_marginHorizontal="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="4">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.7"
                android:gravity="center"
                >


                <com.budiyev.android.circularprogressbar.CircularProgressBar
                    android:id="@+id/totalpercentageprg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:maximum="10"
                    app:progress="2"
                    app:animateProgress="true"
                    app:backgroundStrokeColor="#ff3f51b5"
                    app:backgroundStrokeWidth="2dp"
                    app:drawBackgroundStroke="false"
                    app:foregroundStrokeCap="butt"
                    android:layout_gravity="center"
                    app:foregroundStrokeColor="@color/lightgray"
                    app:foregroundStrokeWidth="8dp"
                    app:indeterminate="false"
                    app:indeterminateRotationAnimationDuration="1200"
                    app:indeterminateSweepAnimationDuration="600"
                    app:indeterminateMinimumAngle="45"

                    app:progressAnimationDuration="100"
                    app:startAngle="270"/>

                <LinearLayout
                    android:layout_width="59dp"
                    android:layout_height="21dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/Totalrideper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0%"
                        android:textColor="@color/black"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="orders Completed"
                        android:textColor="@color/lightgray"
                        android:textSize="9sp"
                        android:textStyle="bold" />


                </LinearLayout>


            </FrameLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2.3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightgray"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:id="@+id/totalridestv"
                    android:textSize="25sp"
                    android:text="4980"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightgray"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:text="Total Requests"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:weightSum="3"

                        android:layout_marginTop="12sp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="In Process"
                            android:textStyle="bold"
                            android:textColor="@color/red"
                            android:layout_marginHorizontal="4dp"
                            android:textSize="10sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="1250"

                            android:id="@+id/inprocesstv"
                            android:textStyle="bold"
                            android:textColor="@color/red"
                            android:layout_marginTop="10dp"
                            android:textSize="12sp"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:layout_marginTop="12sp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Completed"
                            android:textStyle="bold"
                            android:textColor="@color/skycolor"
                            android:layout_marginHorizontal="4dp"
                            android:textSize="10sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="3500"
                            android:textStyle="bold"
                            android:id="@+id/completetv"
                            android:textColor="@color/skycolor"
                            android:layout_marginTop="10dp"
                            android:textSize="12sp"/>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:layout_marginTop="12sp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cancelled"
                            android:textStyle="bold"
                            android:textColor="@color/dark_gray"
                            android:layout_marginHorizontal="4dp"
                            android:textSize="10sp"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="1250"
                            android:id="@+id/canceltv"
                            android:textStyle="bold"
                            android:textColor="@color/dark_gray"
                            android:layout_marginTop="10dp"
                            android:textSize="12sp"/>


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>



        <LinearLayout
            android:background="@drawable/backbg2"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".99"
                android:layout_height="match_parent"
                android:orientation="vertical"
               >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text= "Sales"
                        android:id="@+id/sales"
                        android:textColor="@color/lightgray"
                        android:layout_margin="8dp"
                        android:textSize="17sp"
                        android:textStyle="bold"/>



                    <TextView
                        android:id="@+id/todate"
                        android:layout_toEndOf="@+id/sales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text= "10-10-2021"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/offwhite"
                        android:textSize="9sp"
                        />


                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/offwhite"
                    android:layout_marginHorizontal="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
android:paddingStart="5dp"
                    android:text= "36005 RS"
                    android:id="@+id/totalsale"
                    android:textColor="@color/red"
                    android:layout_margin="8dp"
                    android:textSize="17sp"
                    android:textStyle="bold"/>


            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_weight=".01"
                android:layout_height="match_parent"
                android:background="@color/offwhite"
                />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".99"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text= "Active"
                        android:id="@+id/salascaes"
                        android:textColor="@color/lightgray"
                        android:layout_margin="8dp"
                        android:textSize="17sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="10dp"
                        android:text= "Drivers"
                        android:layout_marginStart="15dp"
                        android:id="@+id/salasces"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/salascaes"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@color/red"
                        android:textSize="10sp"
                        android:textStyle="bold"/>



                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/offwhite"
                    android:layout_marginHorizontal="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text= "36005 /33333"
                    android:id="@+id/totaldriveroutof"
                    android:textColor="@android:color/holo_blue_bright"
                    android:layout_margin="8dp"
                    android:textSize="17sp"
                    android:textStyle="bold"/>
            </LinearLayout>
    </LinearLayout>



</LinearLayout>