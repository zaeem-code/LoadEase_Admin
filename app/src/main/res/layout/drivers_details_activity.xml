<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="9"
    android:background="@color/lightgray"
    android:orientation="vertical" >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/x"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tool"
            android:background="@color/lightgray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/backpress"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/backbg"
                    android:src="@drawable/ic_baseline_arrow_back_24"/>
            </RelativeLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:backgroundTint="@color/white"
                    android:text="LoadEase"
                    android:textColor="@color/lightgray"
                    android:gravity="center"

                    />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="70dp"
                    android:padding="5dp"
                    android:layout_marginRight="10sp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_baseline_person_24"
                    app:civ_border_width="2dp"
                    android:layout_alignParentRight="true"
                    app:civ_border_color="@color/white"/>

            </RelativeLayout>



        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.6"
        android:layout_marginHorizontal="5dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="3dp"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registration"
            android:gravity="center"
            android:textSize="23sp"
            android:textColor="@color/lightgray"
            android:textStyle="bold"/>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="15dp"
            android:background="@color/lightgray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Approved"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/lightgray"
                    android:gravity="center"/>



                <View
                    android:id="@+id/divider1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@color/lightgray" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2085"

                    android:id="@+id/approved"
                    android:textSize="30sp"
                    android:textColor="@color/lightgray"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="10dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    >


                    <ImageView
                        android:id="@+id/arrow_drop_up"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/ic_baseline_arrow_drop_up_24"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text = "13.30%"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/green"
                        android:layout_toEndOf="@id/arrow_drop_up"/>



                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pending"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/lightgray"
                    android:gravity="center"/>



                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@color/lightgray" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2085"
                    android:id="@+id/pending"
                    android:textSize="30sp"
                    android:textColor="@color/lightgray"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="10dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:layout_marginTop="15dp"
                    >


                    <ImageView
                        android:id="@+id/arrow_drop_up_2"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/ic_baseline_arrow_drop_up_24"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text = "13.30%"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/green"
                        android:layout_toEndOf="@id/arrow_drop_up_2"/>



                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Blocked"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/lightgray"
                    android:gravity="center"/>



                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="15dp"
                    android:background="@color/lightgray" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2085"
                    android:textSize="30sp"

                    android:id="@+id/blocked"
                    android:textColor="@color/lightgray"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="10dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    >


                    <ImageView
                        android:id="@+id/arrow_drop_down"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="4dp"
                        android:src="@drawable/ic_baseline_arrow_drop_down_24"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text = "13.30%"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/red"
                        android:layout_toEndOf="@id/arrow_drop_down"/>



                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.5"
        android:layout_marginHorizontal="5dp"
        android:weightSum="5"
        android:orientation="vertical"
        android:background="@drawable/cardview_background2">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".4"
            android:text="Drivers / Riders"
            android:textStyle="bold"
            android:layout_marginHorizontal="30sp"
            android:textSize="23sp"
            android:textColor="@color/lightgray"/>

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".01"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="15dp"
            android:background="@color/lightgray" />

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight=".4">

    <TableRow
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:gravity="center">

        <TextView
            android:textColor="@android:color/holo_blue_dark"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="Pic"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:text="Name"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.5"
            />


        <TextView
            android:text="Ride Documents"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="3dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="4"/>

        <TextView
            android:text="Ride Status"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="3dp"
            android:layout_gravity="center_vertical"

            android:layout_weight="2"/>


    </TableRow>

</TableLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/driver_rcy"
            android:layout_width="match_parent"
            android:layout_weight="4.2"
            android:visibility="visible"
            android:layout_height="0dp"/>


    </LinearLayout>

</LinearLayout>


