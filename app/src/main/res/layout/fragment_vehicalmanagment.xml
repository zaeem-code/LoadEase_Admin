<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="9"
    android:background="@color/lightgray"
    android:layout_height="match_parent">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/lightgray"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:visibility="visible"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:background="@drawable/backbg2">



        <ImageView
            android:scaleType="fitXY"
            android:layout_width="135dp"
            android:id="@+id/intro"


            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp"
            android:layout_height="100dp"
            android:src="@drawable/intro"/>



    <ImageView
        android:scaleType="fitXY"
        android:layout_weight="1"
        android:id="@+id/intro2"
        android:layout_toEndOf="@+id/intro"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/pak"/>

        <LinearLayout
            android:id="@+id/intro3"
            android:layout_below="@+id/intro2"
            android:layout_width="match_parent"
            android:visibility="visible"
            android:gravity="center"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                >


                <com.budiyev.android.circularprogressbar.CircularProgressBar
                    android:id="@+id/prgblock"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:animateProgress="true"
                    app:backgroundStrokeColor="#ff3f51b5"
                    app:backgroundStrokeWidth="2dp"
                    app:drawBackgroundStroke="false"
                    app:foregroundStrokeCap="butt"
                    android:layout_gravity="center"
                    app:foregroundStrokeColor="@color/red"
                    app:foregroundStrokeWidth="8dp"
                    app:indeterminate="false"
                    app:indeterminateRotationAnimationDuration="1200"
                    app:indeterminateSweepAnimationDuration="600"
                    app:indeterminateMinimumAngle="45"
                    app:maximum="100"
                    app:progress="50"
                    app:progressAnimationDuration="100"
                    app:startAngle="270"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">






                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blocked"
                        android:textSize="14sp"
                        android:textStyle="bold"

                        android:gravity="center"
                        android:textColor="@color/lightgray"
                        android:layout_gravity="center"/>


                </LinearLayout>


            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                >


                <com.budiyev.android.circularprogressbar.CircularProgressBar
                    android:id="@+id/prgonline"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:animateProgress="true"
                    app:backgroundStrokeColor="#ff3f51b5"
                    app:backgroundStrokeWidth="2dp"
                    app:drawBackgroundStroke="false"
                    app:foregroundStrokeCap="butt"
                    android:layout_gravity="center"
                    app:foregroundStrokeColor="@color/lightgray"
                    app:foregroundStrokeWidth="8dp"
                    app:indeterminate="false"
                    app:indeterminateRotationAnimationDuration="1200"
                    app:indeterminateSweepAnimationDuration="600"
                    app:indeterminateMinimumAngle="45"
                    app:maximum="100"
                    app:progress="50"
                    app:progressAnimationDuration="100"
                    app:startAngle="270"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Online"
                        android:textSize="14sp"
                        android:textStyle="bold"

                        android:gravity="center"
                        android:textColor="@color/lightgray"
                        android:layout_gravity="center"/>


                </LinearLayout>


            </FrameLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                >


                <com.budiyev.android.circularprogressbar.CircularProgressBar
                    android:id="@+id/prgoffline"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:animateProgress="true"
                    app:backgroundStrokeColor="#ff3f51b5"
                    app:backgroundStrokeWidth="2dp"
                    app:drawBackgroundStroke="false"
                    app:foregroundStrokeCap="butt"
                    android:layout_gravity="center"
                    app:foregroundStrokeColor="@color/offwhite"
                    app:foregroundStrokeWidth="8dp"
                    app:indeterminate="false"
                    app:indeterminateRotationAnimationDuration="1200"
                    app:indeterminateSweepAnimationDuration="600"
                    app:indeterminateMinimumAngle="45"
                    app:maximum="100"
                    app:progress="50"
                    app:progressAnimationDuration="100"
                    app:startAngle="270"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="40dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">




                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Offline"
                        android:textSize="14sp"
                        android:textStyle="bold"

                        android:gravity="center"
                        android:textColor="@color/lightgray"
                        android:layout_gravity="center" />


                </LinearLayout>


            </FrameLayout>


        </LinearLayout>
        <LinearLayout

            android:layout_below="@+id/intro3"
            android:layout_width="match_parent"
            android:visibility="visible"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:weightSum="3">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingStart="40dp"
                android:weightSum="2"
                android:layout_height="match_parent">

                <View

                    android:layout_width="0dp"
                    android:background="@color/red"

                    android:layout_weight=".5"

                    android:layout_height="wrap_content"
                    />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:text="87%"
                android:paddingStart="10dp"
                android:id="@+id/blockedper"
                android:gravity="center_vertical|start"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="13sp" />



            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingStart="40dp"
                android:weightSum="2"
                android:layout_height="match_parent">

                <View

                    android:layout_width="0dp"
                    android:background="@color/lightgray"

                    android:layout_weight=".5"

                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="match_parent"
                    android:text="87%"
                    android:paddingStart="10dp"
                    android:id="@+id/onlineper"
                    android:gravity="center_vertical|start"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="13sp" />



            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:paddingStart="40dp"
                android:layout_weight="1"
                android:weightSum="2"
                android:layout_height="match_parent">

                <View

                    android:layout_width="0dp"
                    android:background="@color/offwhite"

                    android:layout_weight=".5"

                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="match_parent"
                    android:text="87%"
                    android:paddingStart="10dp"
                    android:id="@+id/offlineper"
                    android:gravity="center_vertical|start"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="13sp" />



            </LinearLayout>
        </LinearLayout>



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:weightSum="3"
        android:visibility="visible"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:background="@drawable/backbg2">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_marginHorizontal="8dp"
                android:textStyle="bold"
                android:textColor="@color/lightgray"
                android:text="Registration"/>
        <View
            android:id="@+id/divider14"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/offwhite"
            android:layout_marginHorizontal="10dp"
            />


        <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >


                        <TextView

                            android:visibility="visible"
                            android:id="@+id/total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/lightgray"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="24sp"
                            android:text="4980"/>

                        <TextView
                            android:visibility="visible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/lightgray"
                            android:layout_gravity="center"
                            android:textSize="17sp"
                            android:text="Total Requests"/>


                        <LinearLayout
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:weightSum="3"

                                android:layout_marginTop="12sp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="In Process"
                                    android:textStyle="bold"
                                    android:textColor="@color/red"
                                    android:layout_marginHorizontal="4dp"
                                    android:textSize="14sp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:gravity="center"
                                    android:layout_height="wrap_content"
                                    android:text="1250"
                                    android:id="@+id/unverifiedtxt"
                                    android:textStyle="bold"
                                    android:textColor="@color/red"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginHorizontal="12dp"
                                    android:textSize="12sp"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:weightSum="3"
                                android:layout_marginTop="12sp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Completed"
                                    android:textStyle="bold"
                                    android:textColor="@color/skycolor"
                                    android:layout_marginHorizontal="4dp"
                                    android:textSize="14sp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:gravity="center"
                                    android:layout_height="wrap_content"
                                    android:text="3500"
                                    android:id="@+id/textcomp"
                                    android:textStyle="bold"
                                    android:textColor="@color/skycolor"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginHorizontal="12dp"
                                    android:textSize="12sp"/>


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:weightSum="2"
                                android:layout_marginTop="12sp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Cancelled"
                                    android:textStyle="bold"
                                    android:textColor="@color/dark_gray"
                                    android:layout_marginHorizontal="4dp"
                                    android:textSize="14sp"/>


                                <TextView
                                    android:layout_width="match_parent"
                                    android:gravity="center"
                                    android:layout_height="wrap_content"
                                    android:text="1250"
                                    android:id="@+id/canceltxt"
                                    android:textStyle="bold"
                                    android:textColor="@color/dark_gray"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginHorizontal="12dp"
                                    android:textSize="12sp"/>


                            </LinearLayout>


                        </LinearLayout>



                    </LinearLayout>










    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginHorizontal="5dp"
        android:weightSum="3"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:background="@drawable/cardview_background2">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".3"
            android:text="Vehicle Details"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginHorizontal="30sp"
            android:textSize="20sp"
            android:textColor="@color/lightgray"/>

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".01"
            android:layout_marginTop="4dp"

            android:layout_marginHorizontal="15dp"
            android:background="@color/lightgray" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".4">

            <TableRow
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:gravity="center">

                <TextView
                    android:textColor="@android:color/holo_blue_dark"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"

                    android:padding="5dp"
                    android:text=" "
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:text="Name"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.5"
                    />


                <TextView
                    android:layout_height="match_parent"
                    android:text="Car id"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:padding="3dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.7"/>
                <TextView
                    android:text="Ride Type"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:padding="3dp"
                    android:layout_gravity="center_vertical"

                    android:layout_weight="1.5"/>

                <TextView
                    android:text="Ride Status"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:padding="3dp"
                    android:layout_gravity="center_vertical"

                    android:layout_weight="1.5"/>


            </TableRow>

        </TableLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/driver_rcy"
            android:layout_width="match_parent"
            android:layout_weight="2.23"
            android:visibility="visible"
            android:layout_height="0dp"/>


    </LinearLayout>

</LinearLayout></androidx.core.widget.NestedScrollView>